{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "main.ts",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.ts",
      "runtimeExecutable": "tsx",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**",
      ],
      "args": [
        "--config",
        "${workspaceFolder}/config.json",
      ],
    },
    {
      "name": "test.ts",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test.ts",
      "runtimeExecutable": "tsx",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**",
      ],
    },
  ],
}
